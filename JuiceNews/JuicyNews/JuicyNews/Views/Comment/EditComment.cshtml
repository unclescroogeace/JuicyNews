@model JuicyNews.ViewModels.Comment.CommentEditCommentViewModel
@{
    ViewBag.Title = "EditComment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EditComment</h2>

@{ 
    string newsTitle = (string)ViewData["newsTitle"];
}

@using (Html.BeginForm("EditComment", "Comment", FormMethod.Post))
{
    @Html.ValidationSummary(true);
    @Html.HiddenFor(model => model.Id);
    @Html.HiddenFor(model => model.NewsId);
    @Html.HiddenFor(model => model.UserId);
    @Html.HiddenFor(model => model.Author);
    @Html.HiddenFor(model => model.Date);
    <fieldset>
        <legend>Edit User</legend>
        <table>
            <tr>
                <td>
                    Edit comment for news : @newsTitle
                </td>
            </tr>
            <tr>
                <td>Content</td>
                <td>@Html.EditorFor(model => model.Content)</td>
                <td>@Html.ValidationMessageFor(model => model.Content)</td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit" value="Save" />&nbsp;&nbsp;&nbsp;@Html.ActionLink("Cancel", "ViewNews", "News", null, new { id = Model.NewsId})
                </td>
            </tr>
        </table>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}