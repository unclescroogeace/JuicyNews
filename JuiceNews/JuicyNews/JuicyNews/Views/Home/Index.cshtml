@model JuicyNews.ViewModels.Home.HomeIndexViewModel
@{
    ViewBag.Title = "Welcome";
}

@{
    string viewLink = @"../News/ViewNews?id=";
}

<div class="row">
    @foreach (var news in Model.LatestNews)
    {
        <div class="col-md-4">
            <a href="@viewLink@news.Id"><h2>@news.Title</h2></a>
            <p>@JuicyNews.Utility.Helper.stringShorter(news.Content, 200)...</p>
            <div style="color: #666666">@news.Author</div>
            <div style="color: #666666">@news.DateOfPublishing</div>
        </div>
    }
</div>
<br /><hr /><br />
<div>
    @foreach (var news in Model.News)
    {
        <a href="@viewLink@news.Id"><h4>@news.Title</h4></a><br />
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
